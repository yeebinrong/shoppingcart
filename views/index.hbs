<form action="/" method="POST">
    <div class="form-group">
        <label for="item">Item</label>
        <input type="text" name="item" id="item" class="form-control" placeholder="Enter the item name." required="required">
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" name="quantity" id="quantity" class="form-control" placeholder="No. of items." min="1" step="1" required="required">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="number" name="price" id="price" class="form-control" placeholder="Cost per item." required="required">
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button class="btn btn-outline-primary btn-lg mt-4">
            Add to cart.
        </button>
    </div>

    <input type="hidden" name="cartState" value="{{cartState}}">
</form>
